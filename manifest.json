{
  "name": "CopySpaghetti",
  "version": "1.0",
  "description": "Store copypastas for quick access when commenting in online forums or chat groups.",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
      "default_title": "CopySpaghetti",
      "default_icon": "icon.png",
      "default_popup": "popup.html"
  },
  "permissions": [
    "storage"
  ],
  "manifest_version": 2
}